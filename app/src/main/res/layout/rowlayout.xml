<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="16dp"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumbnail_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="Thumbnail Image"
            android:transitionName="image"
            />

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="Title"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:padding="16dp"
            android:layout_below="@+id/thumbnail_imageview"
            />

        <TextView
            android:id="@+id/trailtext_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="TrailText"
            android:layout_below="@id/title_textview"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            />

        <TextView
            android:id="@+id/webdate_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trailtext_textview"
            android:textSize="13sp"
            android:text="DATE"
            android:paddingLeft="16dp"
            android:paddingBottom="24dp"
            />

        <TextView
            android:id="@+id/sectionname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="13sp"
            android:text="Section Name"
            android:layout_below="@+id/trailtext_textview"
            android:layout_toRightOf="@id/webdate_textview"
            android:paddingStart="24dp"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>