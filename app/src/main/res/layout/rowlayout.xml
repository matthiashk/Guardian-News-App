<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:text="Title"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />

    <TextView
        android:id="@+id/trailtext_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:text="TrailText"
        android:layout_below="@id/title_textview"
        android:paddingBottom="5dp"
        />

    <TextView
        android:id="@+id/webdate_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trailtext_textview"
        android:textSize="13sp"
        android:text="DATE"
        android:paddingBottom="5dp"
        />

    <TextView
        android:id="@+id/sectionname_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="13sp"
        android:text="Section Name"
        android:layout_below="@+id/trailtext_textview"
        android:layout_toRightOf="@id/webdate_textview"
        android:paddingStart="10dp"

        />

</RelativeLayout>